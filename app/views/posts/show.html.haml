.show
  .show__postTitle
    = @post.title
    .show__postTitle__edit
    -if user_signed_in?
      = link_to "編集", edit_post_path(@post.id)
      = link_to "削除", post_path(@post.id), method: :delete
  .show__postDate
    = @post.created_at.strftime('%Y/%m/%d')
  .show__postText
    = simple_format @post.content
